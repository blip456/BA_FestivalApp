@model FestivalLib.model.Festival
@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@Model.Name</h1>
                <h2>@Model.Omschrijving</h2>
                <h3>@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</h3>
            </hgroup>
        </div>
    </section>
}


    <img src="../Content/images/welcome.jpg" alt="Alternate Text" style="margin: 0 auto; width:100%;"/>