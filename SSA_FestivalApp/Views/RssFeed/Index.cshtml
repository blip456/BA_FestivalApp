@model FestivalLib.model.RssItem

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("InsertRSS", "RssFeed", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>RssItem</legend>

        <div class="editor-label">
            Link naar artikel
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Link)
            @Html.ValidationMessageFor(model => model.Link)
        </div>

        <div class="editor-label">
            Titel
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            Beschrijving
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descr)
            @Html.ValidationMessageFor(model => model.Descr)
        </div>

        @*<div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>*@

        <p>
            <input type="submit" value="Toevoegen" class="btn btn-primary btn-sm" />
        </p>
    </fieldset>
