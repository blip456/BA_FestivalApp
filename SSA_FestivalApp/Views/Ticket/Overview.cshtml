@model FestivalLib.model.Ticket

@{
    ViewBag.Title = "Overzicht";
}

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>Gegevens</legend>

    <div class="display-label">
         Naam:
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TicketHolder)
    </div>

    <div class="display-label">
         Email: 
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TicketHolderEmail)
    </div>

    <div class="display-label">
         Aantal: 
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Amount)
    </div>

    <div class="display-label">
        Prijs per ticket: 
    </div>    
    <div class="display-field">
             @(Model.TicketType.Price.ToString("c")) 
    </div>
    <div class="display-label">
        Totaal prijs:
    </div>
    <div class="display-field">
        @((Model.Amount * Model.TicketType.Price).ToString("c"))
    </div>

    @Html.ActionLink("Bevestig", "Index", "Home", htmlAttributes: new {@class = "btn btn-primary btn-sm" })

</fieldset>
