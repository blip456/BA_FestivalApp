                <TextBlock>
                    <Run Text="Stad: "/>
                    <Run Text="{Binding City}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Bedrijf: "/>
                    <Run Text="{Binding Company}"/>
                </TextBlock>
                <StackPanel.ToolTip>
                    <TextBlock Text="Klik voor meer informatie"/>
                </StackPanel.ToolTip>
            </StackPanel>
        </DataTemplate>


