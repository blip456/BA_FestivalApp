        <DataTemplate x:Key="scBandTemplate">
            <WrapPanel>

                <Button Width="{Binding TimeSpan}" Height="auto">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock Text="{Binding Band.Name}"/>
                            <TextBlock>             
                                <Run Text="{Binding From}"/>
                                <Run Text="-"/>
                                <Run Text="{Binding Until}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding Stage}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </WrapPanel>


        </DataTemplate>

        <!-- nieuwe line up datatemplate -->
        <DataTemplate x:Key="scStageTemplate">
            <WrapPanel Margin="10">
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <ItemsControl ItemTemplate="{DynamicResource scBandTemplate}" ItemsSource="{Binding Bands}"  ItemsPanel="{DynamicResource ItemSPanel}">
                </ItemsControl>
            </WrapPanel>


