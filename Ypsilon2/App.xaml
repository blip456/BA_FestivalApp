<Application x:Class="Ypsilon2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"   
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF45"
             StartupUri="view/MainWindow.xaml">
    <!-- xmlns:i = namespace voor eventtocommand - zou stackpanel command probleem moeten fixen -->

    <Application.Resources>
        <SolidColorBrush x:Key="Yellow">#FFE408</SolidColorBrush>
        <SolidColorBrush x:Key="Background">#111111</SolidColorBrush>
        <SolidColorBrush x:Key="LightGray">#EDEDED</SolidColorBrush>

        <FontFamily x:Key="BaseFont">Segoe UI</FontFamily>

        <FontFamily x:Key="ClockFont">Arial</FontFamily>
        <LinearGradientBrush x:Key="_TopGlass"
                         StartPoint="0.5,0"
                         EndPoint="0.5,1.0">
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="#44FFFFFF"
                          Offset="0.25" />
                <GradientStop Color="#23000000"
                          Offset="0.45" />
                <GradientStop Color="#50FFFFFF"
                          Offset="0.5" />
                <GradientStop Color="#03000000"
                          Offset="1" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>


        <!--broncode voor flipclock xaml = http://rgramann.blogspot.be/2009/08/retro-flip-clock-wpf-control.html -->
        <!-- zelf wel dingen aangepast, dus niet gewoon crtl+c en crtl+v gedaan :) -->

        <Style TargetType="{x:Type Control}" x:Key="Flipclock">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"
                                  Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Canvas Grid.Column="0"
                                        Width="{Binding ElementName=_OuterHourPanel, Path=ActualWidth}"
                                        Height="{Binding ElementName=_OuterHourPanel, Path=ActualHeight}"
                                        Grid.Row="0">
                                        <!-- linkse flip, achterste -->
                                        <Rectangle RadiusX="8"
                                               RadiusY="8"
                                               x:Name="_OuterHourPanel"
                                               Canvas.Top="0"
                                               Width="75"
                                               Height="75"
                                               Fill="Black"
                                               Stroke="#c6c6c6"
                                               StrokeThickness="0.5" />
                                        <!-- linkse flip, middelste -->
                                        <Rectangle RadiusX="8"
                                               RadiusY="8"
                                               Canvas.Top="2"
                                               Width="75"
                                               Height="75"
                                               Fill="Black"
                                               Stroke="#c6c6c6"
                                               StrokeThickness="0.5" />
                                        <Border Canvas.Top="4"
                                            Width="{Binding ElementName=_HourPanel, Path=ActualWidth}"
                                            Height="{Binding ElementName=_HourPanel, Path=ActualHeight}"
                                            Panel.ZIndex="5"
                                            Background="{StaticResource _TopGlass}"></Border>
                                        <!-- linker flip, voorste -->
                                        <Rectangle RadiusX="8" 
                                               RadiusY="8"
                                               x:Name="_HourPanel"
                                               Canvas.Top="4"
                                               Height="75"
                                               Width="75"
                                               Fill="Black"
                                               Stroke="#c6c6c6"
                                               StrokeThickness="0.5" />
                                        <StackPanel Orientation="Horizontal"
                                                Background="Transparent"
                                                RenderTransformOrigin="0.5,0.5"
                                                x:Name="_HourTextPanel">
                                            <StackPanel.RenderTransform>
                                                <ScaleTransform x:Name="_HourTransform" />
                                            </StackPanel.RenderTransform>
                                            <StackPanel.Resources>
                                                <Storyboard x:Key="_HourFlipStoryboard">
                                                    <DoubleAnimation Duration="0:0:2"
                                                                 From="1"
                                                                 To="0.0"
                                                                 Storyboard.TargetName="_HourTransform"
                                                                 Storyboard.TargetProperty="ScaleY" />
                                                </Storyboard>
                                            </StackPanel.Resources>
                                            <TextBlock x:Name="_Hour1TextBlock"
                                                   FontFamily="{StaticResource ClockFont}"
                                                   FontStyle="Normal"
                                                   Foreground="White"
                                                   FontWeight="10"
                                                   Padding="3,3,0,3"
                                                   Text="{Binding txtTestFlop}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="60" />
                                            <TextBlock x:Name="_Hour2TextBlock"
                                                   FontFamily="{StaticResource ClockFont}"
                                                   FontStyle="Normal"
                                                   Foreground="White"
                                                   FontWeight="10"
                                                   Text="99"
                                                   Padding="0,3,3,3"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="60" />
                                        </StackPanel>
                                        <Line X1="1"
                                          X2="-1"
                                          Y1="5"
                                          Y2="5"
                                          Stroke="White"
                                          StrokeThickness="1" />

                                    </Canvas>
                                </Grid>
                                <Grid Grid.Column="1"
                                  Margin="5,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Canvas Grid.Column="0"
                                        Width="75"
                                        Height="75"
                                        Grid.Row="0">
                                        <Rectangle RadiusX="8"
                                               RadiusY="8"
                                               x:Name="_OuterMinutePanel"
                                               Canvas.Top="0"
                                               Width="75"
                                               Height="75"
                                               Fill="Black"
                                               Stroke="#c6c6c6"
                                               StrokeThickness="0.5" />
                                        <Rectangle RadiusX="8"
                                               RadiusY="8"
                                               Canvas.Top="2"
                                               Width="75"
                                               Height="75"
                                               Fill="Black"
                                               Stroke="#c6c6c6"
                                               StrokeThickness="0.5" />


                                        <Border Canvas.Top="4"
                                            Width="75"
                                            Height="75"
                                            Panel.ZIndex="5"
                                            Background="{StaticResource _TopGlass}"></Border>

                                        <TextBlock x:Name="_MinuteTextBlock"
                                               FontFamily="{StaticResource ClockFont}"
                                               FontStyle="Normal"
                                               Foreground="White"
                                               FontWeight="10"
                                               Text="99"
                                               Padding="3"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="60" />
                                        <Line X1="1"
                                          X2="-1"
                                          Y1="5"
                                          Y2="5"
                                          Stroke="White"
                                          StrokeThickness="1" />
                                    </Canvas>
                                </Grid>
                            </Grid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="NavigatieButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        
        <Style x:Key="StackPanel" TargetType="{x:Type StackPanel}">
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Background" Value="{StaticResource Yellow}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="Grid" TargetType="{x:Type Grid}">
            <Setter Property="Background" Value="{StaticResource LightGray}"/>
        </Style>

        <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        </Style>

        <Style x:Key="Counter" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="45"/>
            <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        </Style>

        <Style x:Key="MainGrid" TargetType="Grid">
            <Setter Property="Margin" Value="20,0,20,0"/>
        </Style>

        <Style x:Key="DeleteContact" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        </Style>

        <Style x:Key="TwoPaneStackpanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>

        <Style x:Key="Button" TargetType="Button">
            <Setter Property="Margin" Value="5,20,5,00"/>
            <Setter Property="Height" Value="30"/>

        </Style>

        <Style x:Key="TextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        </Style>


        <Style x:Key="Subtitle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock}">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
        </Style>


        <Style x:Key="Heading1" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

